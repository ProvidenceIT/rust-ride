<?xml version="1.0" encoding="UTF-8"?>
<workout_file>
    <author>RustRide</author>
    <name>Sweet Spot Base</name>
    <description>Classic sweet spot workout with 3x10 minute intervals at 88-94% FTP</description>
    <sportType>bike</sportType>
    <tags>
        <tag name="Sweet Spot"/>
        <tag name="Base"/>
        <tag name="Endurance"/>
    </tags>
    <workout>
        <!-- Warmup: 10 minutes, 40% to 70% -->
        <Warmup Duration="600" PowerLow="0.4" PowerHigh="0.7"/>

        <!-- First interval: 10 minutes at 90% (sweet spot) -->
        <SteadyState Duration="600" Power="0.90" Cadence="90"/>

        <!-- Recovery: 5 minutes at 50% -->
        <SteadyState Duration="300" Power="0.50"/>

        <!-- Second interval: 10 minutes at 90% -->
        <SteadyState Duration="600" Power="0.90" Cadence="90"/>

        <!-- Recovery: 5 minutes at 50% -->
        <SteadyState Duration="300" Power="0.50"/>

        <!-- Third interval: 10 minutes at 90% -->
        <SteadyState Duration="600" Power="0.90" Cadence="90"/>

        <!-- Cooldown: 10 minutes, 60% to 40% -->
        <Cooldown Duration="600" PowerLow="0.6" PowerHigh="0.4"/>
    </workout>
</workout_file>
